<div class="profile_box container">
<div class='profile_picture'>
  <%= cl_image_tag(current_user.profile.avatar, width: 250, height: 250, crop: :fill, gravity: :face, radius: :max) %></h1>
</div>
<div class='profile_item'>
  <div class="profile_val"><h2><%= @profile.first_name %> <%= @profile.surname %></h2></div>
</div>
<div class='profile_item'>
  <div class="profile_val"><%= @profile.size %></div>
</div>
<div class='profile_item'>
  <div class="profile_val"><%= @profile.fav_color %></div>
</div>

<%= link_to "Edit your profile", edit_profile_path( current_user.profile.id ) %><br />
<%= link_to "Change your password", edit_user_registration_path %><br />
<%= link_to "Delete your user account", edit_user_registration_path %><br />
</div>

</div>
